.md-button
  text-transform: none

.top
  .md-list-item-text
    >*
      width 90%
      
    .highlight
      color white
      background-color rgb(244,67,54)
      // background red
      
    h4
      .count
        display inline-block
        width 8em
        text-align right
        margin-right .25em
    h4+p
      padding-left 8em
    .ellipsis
      overflow:hidden
      text-overflow:ellipsis
      white-space:nowrap

// Config angular-animate with animate.css
main
  position relative
  
  margin 3rem
  
  ui-view.ng-enter
    absolute 0 0 false 0
    
    animation fadeIn .5s
    z-index 500
  ui-view.ng-leave
    absolute 0 0 false 0
    
    animation fadeOut .5s

// Config angular-loading-bar
#loading-bar .bar
#loading-bar .peg
  top auto
  bottom 0
  
#loading-bar-spinner
  top auto
  left auto
  right 10px
  bottom 10px

@import './*/*.styl'
